<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SoundMeter"
             x:Class="SoundMeter.App"
             RequestedThemeVariant="Light">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <!-- component sharing -->
        <StyleInclude Source="/Styles/LargeLabelControl.axaml"></StyleInclude>
        <StyleInclude Source="/Styles/Buttons.axaml"></StyleInclude>
        <StyleInclude Source="/Styles/PopupControl.axaml"></StyleInclude>
    </Application.Styles>
     
    <Application.Resources>
        <SolidColorBrush x:Key="Dark">#1D1D1D</SolidColorBrush>
        <SolidColorBrush x:Key="Light1">#FAFAFA</SolidColorBrush>
        <SolidColorBrush x:Key="Light2">#EBEBEB</SolidColorBrush>
        <SolidColorBrush x:Key="AccentRed">#E72626</SolidColorBrush>
    </Application.Resources>
             
</Application>